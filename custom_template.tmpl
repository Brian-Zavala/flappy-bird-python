<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>{{ title }}</title>
  <style>
    html, body {
      margin: 0;
      padding: 0;
      height: 100%;
      overflow: hidden;
    }
    body {
      display: flex;
      justify-content: center;
      align-items: center;
      background: #70c5ce; /* sky blue fallback */
    }

    #game-container {
      position: relative;
      width: 100vw;
      height: 100vh;
      max-width: 640px;
      max-height: 100vh;
      margin: 0 auto;
    }

    /* Overlay covers entire container */
    #custom-title {
      position: absolute;
      inset: 0;
      z-index: 1000;
      display: flex;
      justify-content: center;
      align-items: center;
      background: #70c5ce;
    }

    /* Responsive title image */
    #title-image {
      width: auto;
      height: auto;
      max-width: 90%;
      max-height: 70%;
      object-fit: contain;  /* keep aspect ratio */
      display: block;
    }

    /* Start button overlaid in the center */
    #start-button {
      position: absolute;
      bottom: 15%;        /* move up from bottom */
      left: 50%;
      transform: translateX(-50%);
      background: #f7dc6f;
      border: 3px solid #f39c12;
      border-radius: 10px;
      padding: 15px 30px;
      color: #333;
      font-size: 16px;
      cursor: pointer;
      font-family: 'Press Start 2P', monospace;
      transition: transform 0.2s, background 0.2s;
      z-index: 1001;
    }
    #start-button:hover  { background: #f39c12; transform: translateX(-50%) scale(1.05); }
    #start-button:active { transform: translateX(-50%) scale(0.95); }

    /* Canvas always visible but behind overlay initially */
    #canvas {
      display: block;
      width: 100%;
      height: 100%;
      image-rendering: pixelated;
      image-rendering: -moz-crisp-edges;
      image-rendering: crisp-edges;
    }
  </style>
</head>
<body>
  <div id="game-container">
    <div id="custom-title">
      <img id="title-image" src="assets/game-title.png" alt="Game Title"
           onerror="this.style.display='none'"/>
      <button id="start-button" type="button">Press to Start</button>
    </div>
    <canvas id="canvas"></canvas>
  </div>

  {{ pygbag_scripts }}

  <script>
    // Simple approach: just hide the overlay when button is clicked
    // The game will already be running in the background
    
    function startGame() {
      // Hide the title overlay
      const titleScreen = document.getElementById('custom-title');
      if (titleScreen) {
        titleScreen.style.display = 'none';
      }
      
      // Send a click event to the canvas to ensure the game responds
      const canvas = document.getElementById('canvas');
      if (canvas) {
        // Create and dispatch a click event to the canvas
        const clickEvent = new MouseEvent('click', {
          view: window,
          bubbles: true,
          cancelable: true,
          clientX: canvas.width / 2,
          clientY: canvas.height / 2
        });
        canvas.dispatchEvent(clickEvent);
        
        // Focus the canvas for keyboard input
        canvas.focus();
      }
    }
    
    // Wait for DOM to be ready
    document.addEventListener('DOMContentLoaded', function() {
      const startButton = document.getElementById('start-button');
      if (startButton) {
        startButton.addEventListener('click', startGame);
      }
      
      // Also allow starting with keyboard
      document.addEventListener('keydown', function(e) {
        const titleScreen = document.getElementById('custom-title');
        if (titleScreen && titleScreen.style.display !== 'none') {
          if (e.code === 'Space' || e.code === 'Enter') {
            e.preventDefault();
            startGame();
          }
        }
      });
    });
  </script>
</body>
</html>
